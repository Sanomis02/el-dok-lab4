{{ include("header.twig") }}

<header class="bg-primary text-white">
    <div class="container text-center">
        <h1>Įėjimo puslapis</h1>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Įėjimas</h2>
                <br>
                <form method="post" action="/authenticateUser">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Elektroninis paštas</label>
                        <input name="pastas" type="email" class="form-control" id="exampleInputPastas1" aria-describedby="emailHelp" placeholder="Iveskite pasta">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Slaptažodis</label>
                        <input name="slaptazodis" type="password" class="form-control" id="exampleInputSlaptazodis1" placeholder="Iveskite slaptazodi">
                    </div>
                    <button type="submit" class="btn btn-primary">Įeiti</button>
                </form>
            </div>
        </div>
    </div>
</section>

